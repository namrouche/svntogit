<?xml version="1.0" encoding="UTF-8"?>

<datasources>
  <!-- The following is kept as a sample for
easy live edition. It is NOT used in the default app. -->

  <local-tx-datasource>
    <jndi-name>nxsearch-compass</jndi-name>
    <connection-url>
      jdbc:hsqldb:${jboss.server.data.dir}${/}hypersonic${/}nxsearch-compass
    </connection-url>
    <driver-class>org.hsqldb.jdbcDriver</driver-class>
    <user-name>sa</user-name>
    <password></password>
  </local-tx-datasource>

  <mbean code="org.jboss.jdbc.HypersonicDatabase"
    name="jboss:service=Hypersonic,database=nxsearch-compass">
    <attribute name="Database">nxsearch-compass</attribute>
    <attribute name="InProcessMode">true</attribute>
  </mbean>
</datasources>
