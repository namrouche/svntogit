<?xml version="1.0" encoding="UTF-8"?>

<datasources>
  <local-tx-datasource>
    <jndi-name>nxarchive-records</jndi-name>
    <connection-url>
      @jdbcUrl@
    </connection-url>
    <driver-class>@jdbcDriver@</driver-class>
    <user-name>@jdbcUser@</user-name>
    <password>@jdbcPassword@</password>
  </local-tx-datasource>

  <mbean code="org.jboss.jdbc.HypersonicDatabase"
    name="jboss:service=Hypersonic,database=nxarchive-records">
    <attribute name="Database">nxarchive-records</attribute>
    <attribute name="InProcessMode">true</attribute>
  </mbean>
</datasources>

