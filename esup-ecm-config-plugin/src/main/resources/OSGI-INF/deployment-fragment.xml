<?xml version="1.0"?>

<fragment>

  <extension target="application#MODULE">

    <module>
      <java>${bundle.fileName}</java>
    </module>

  </extension>
  
  <extension target="pages#PAGES">
	<!-- redirection vers le tableau de bord au login -->
	<page view-id="/nxstartup.xhtml" action="#{startupHelper.initDomainAndFindStartupPage('Default domain', 'user_dashboard')}"/>
	
	<!-- redirection vers l'espace personnel au login NE FONCTIONNE PAS -->
	<!--page view-id="/nxstartup.xhtml" action="#{userWorkspaceManagerActions.navigateToCurrentUserPersonalWorkspace()}" /--> 
  </extension>
  
  <install>

    <!--  Unzip the war template -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <!--  Create a temp dir -->
    <!--  Make sure no directory with that name exists -->
    <delete path="esup-ecm-config.tmp"/>
    <mkdir path="esup-ecm-config.tmp"/>

    <unzip from="${bundle.fileName}" to="esup-ecm-config.tmp">
      <include>**/*.properties</include>
    </unzip>

    <append from="esup-ecm-config.tmp/OSGI-INF/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties"
      addNewLine="true"/>

    <append from="esup-ecm-config.tmp/OSGI-INF/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
      addNewLine="true"/>

    <delete path="esup-ecm-config.tmp"/>
  </install>

</fragment>
