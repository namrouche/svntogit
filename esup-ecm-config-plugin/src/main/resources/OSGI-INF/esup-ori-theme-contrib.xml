<?xml version="1.0"?>

<component name="org.esup.ecm.theme.nuxeo.ori">

  <require>org.nuxeo.theme.jsf</require>

  <!--  themes -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="themes">

    <theme>
      <src>themes/theme-ori.xml</src>
    </theme>

  </extension>

 <!-- views -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="Ori logo" template-engine="jsf-facelets">
      <format-type>widget</format-type>
      <class>org.nuxeo.theme.jsf.views.JSFView</class>
      <template>incl/logo-ori.xhtml</template>
    </view>

    <view name="Ori footer" template-engine="jsf-facelets">
      <format-type>widget</format-type>
      <class>org.nuxeo.theme.jsf.views.JSFView</class>
      <template>incl/footer-ori.xhtml</template>
    </view>



  </extension>


<!-- Styles presets -->
<extension target="org.nuxeo.theme.services.ThemeService" point="presets">

  <palette name="Ori backgrounds"
           src="themes/palettes/oribackgrounds.properties"
           category="background" />

</extension>


</component>
