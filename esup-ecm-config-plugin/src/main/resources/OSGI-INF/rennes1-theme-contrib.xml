<?xml version="1.0"?>

<component name="org.esup.ecm.theme.nuxeo.rennes1">

  <require>org.nuxeo.theme.jsf</require>

  <!--  themes -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="themes">

    <theme>
      <src>themes/theme-rennes1.xml</src>
    </theme>

  </extension>

 <!-- views -->
  <extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="Rennes1 logo">
      <format-type>widget</format-type>
      <class>org.nuxeo.theme.jsf.views.JSFView</class>
      <template>incl/logo-rennes1.xhtml</template>
    </view>

    <view name="Rennes1 footer">
      <format-type>widget</format-type>
      <class>org.nuxeo.theme.jsf.views.JSFView</class>
      <template>incl/footer-rennes1.xhtml</template>
    </view>



  </extension>


<!-- Styles presets -->
<extension target="org.nuxeo.theme.services.ThemeService" point="presets">

  <palette name="Rennes1 backgrounds"
           src="themes/palettes/rennes1backgrounds.properties"
           category="background" />

</extension>



</component>
