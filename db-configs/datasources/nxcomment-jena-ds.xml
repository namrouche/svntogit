<?xml version="1.0" encoding="UTF-8"?>

<datasources>
  <local-tx-datasource>
    <jndi-name>comment-relations</jndi-name>
    <connection-url>
      @jdbcJenaUrl@
    </connection-url>
    <driver-class>@jdbcDriver@</driver-class>
    <user-name>@jdbcUser@</user-name>
    <password>@jdbcPassword@</password>
  </local-tx-datasource>

  <mbean code="org.jboss.jdbc.HypersonicDatabase"
    name="jboss:service=Hypersonic,database=comment-relations">
    <attribute name="Database">comment-relations</attribute>
    <attribute name="InProcessMode">true</attribute>
  </mbean>
</datasources>

